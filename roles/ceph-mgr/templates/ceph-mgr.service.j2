[Unit]
Description=Ceph Manager
After=docker.service

[Service]
EnvironmentFile=-/etc/environment
ExecStartPre=-/usr/bin/docker stop ceph-mgr-{{ ansible_hostname }}
ExecStartPre=-/usr/bin/docker rm ceph-mgr-{{ ansible_hostname }}
ExecStart=/usr/bin/docker run --rm --net=host \
  --memory={{ ceph_mgr_docker_memory_limit }} \
  {% if ceph_docker_version is version('1.13', '>=') -%}
  --cpus={{ ceph_mgr_docker_cpu_limit }} \
  {% else -%}
  --cpu-quota={{ ceph_mgr_docker_cpu_limit * 100000 }} \
  {% endif -%}
  {% if not containerized_deployment_with_kv -%}
  -v /var/lib/ceph:/var/lib/ceph:z \
  -v /etc/ceph:/etc/ceph:z \
  -v /var/run/ceph:/var/run/ceph:z \
  {% else -%}
  -e KV_TYPE={{kv_type}} \
  -e KV_IP={{kv_endpoint}} \
  -e KV_PORT={{kv_port}} \
  {% endif -%}
  -v /etc/localtime:/etc/localtime:ro \
  -e CLUSTER={{ cluster }} \
  -e CEPH_DAEMON=MGR \
  {% if ceph_mgr_docker_extra_env is defined and ceph_mgr_docker_extra_env is not none
      and ceph_mgr_docker_extra_env | length > 0 -%}
  {{ ceph_mgr_docker_extra_env | trim }} \
  {% endif -%}
  --name=ceph-mgr-{{ ansible_hostname }} \
  {{ ceph_docker_registry }}/{{ ceph_docker_image }}:{{ ceph_docker_image_tag }}
ExecStopPost=-/usr/bin/docker stop ceph-mgr-{{ ansible_hostname }}
Restart=always
RestartSec=10s
TimeoutStartSec=120
TimeoutStopSec=15

[Install]
WantedBy=multi-user.target
